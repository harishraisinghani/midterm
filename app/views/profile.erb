<div id="background">

<div class="container">

  <div class= "row">
    <div class="col-md-2">
      <div class= "profile">
        <h4 class="text-center"><%= @profile.display_name %></h4>
        <img src=<%= @profile.picture %> style="width:150px;height:150px;" class="img-circle">
        <a href="mailto:<%= @profile.email %>" class="btn btn-success btn-block"> Connect with me </a>
      </div>
    </div>
    <div class="col-md-10">
      <p class="jumbotron" name= "content"><%= @profile.about %></p>
    </div> 
  </div>

  <div class="row">
    <div class = "col-md-2 skills" align="left">
      <br>
      <h4 class="text-center">My Skills:</h4>
      <% @profile.user_skills.each do |userskill| %>
        <a href="/search/<%= userskill.skill_id %>" type="button" class="btn btn-primary btn-block btn-sm pad-all"><%=Skill.find(userskill.skill_id).name %></a></li>
        <% end %>
      </div>
  <div class= "row">
    <div class="col-md-4 center-rating">
      <strong>Teacher Rating: <%=@teacher_avg_feedback.round(1)%></strong>
        <table>
          <tr>
            <td style="padding-right:10px">
              <label for="input-4" class="control-label">Likes</label>
            </td>
            <td>
              <input id="input-4" name="input-4" value="<%=@teacher_avg_feedback%>" class="rating-loading">
            </td>
          </tr>
        </table>

      <script>
        $(document).on('ready', function(){
          $('#input-4').rating({displayOnly: true, step: 0.5});
        });
      </script>

    </div>

    <div class="col-md-4 center-rating">
      <strong>Student  Rating: <%=@student_avg_feedback.round(1)%></strong>
       <table>
          <tr>
            <td style="padding-right:10px">
              <label for="input-5" class="control-label">Likes</label>
            </td>
            <td>
              <input id="input-5" name="input-5" value="<%=@student_avg_feedback%>" class="rating-loading">
            </td>
          </tr>
        </table>
        <script>
        $(document).on('ready', function(){
            $('#input-5').rating({displayOnly: true, step: 0.5});
        });
        </script>
    </div>
  </div> <!-- row -->
  </div>

  <div class= "row">
  <div class="col-md-2"></div>

    <div class="col-md-8">
        <div class = "feedback">
          <br style="line-height: 250%">
          <div class="row">
            <div class="col-md-2">
              <div class="row">
              </div>
              <br>
            </div>
            <div class="col-md-10">
              <% if Feedback.where(user_id: @profile.id).where(profile_id: @user.id).empty? %> <%#Need to change this if adding session objects %>
                <%= erb :feedback, locals: { :user => @profile}%> 
              <% end %>
            </div>

          </div>

          <div class="row">
            <% @all_feedback = @profile.feedbacks %>
            <% @all_feedback = @all_feedback.sort_by { |feedback| feedback.created_at }.reverse %> 
            <% @all_feedback.each do |feedback| %>
              <div class="col-md-2">
                <div class="row">
                  Rating: <%= feedback.rating %>
                </div>
              </div>

              <div class="col-md-10">
                <div class="row">

                  <p class="form-control"><%= feedback.content %></p><br>
                    <div class="delete-button">
                      <% if feedback.profile_id == @user.id %>
                        <%= erb :delete, locals: {:feedback => feedback} %>
                      <% end %>
                    </div>
                  <br>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class= "row">
    <nav aria-label="Page navigation">
      <div class="text-center">
        <ul class="pagination">
          <li class="disabled"><a href="#" aria-label="Previous"><span aria-hidden="true">&laquo;</span></a></li>
          <li class="active"><a href="#">1 <span class="sr-only">(current)</span></a></li>
          <li><a href="#">2</a></li>
          <li><a href="#">3</a></li>
          <li><a href="#">4</a></li>
          <li><a href="#">5</a></li>
          <li>
            <a href="#" aria-label="Next">
              <span aria-hidden="true">&raquo;</span>
            </a>
          </li>
        </ul>
      </div>
    </nav>
  </div>
</div>
</div><!-- background gradient close -->